<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.HomePage">
  <StackLayout BackgroundColor ="White">
    <Image x:Name="welcomeImage" VerticalOptions="Start"/>
    <Label x:Name="welcomeLabel"
           Text="Welcome"
           Font="Large"
           HorizontalOptions="Center"
           VerticalOptions="Center"/>

    <Button Text="Go to store"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Command="{Binding GoToThereCommand}"/>
    
    <Button Text="Menu"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Command="{Binding GoMenuCommand}"/>
    
    <Button Text="For Members"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Command="{Binding GoMemberCommand}"/> 
    <!-- <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />   -->
  </StackLayout>
  
</ContentPage>