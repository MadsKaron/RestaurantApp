<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.NaviPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout BackgroundColor="#bcc2c8">
      <Image VerticalOptions="Start" Source="header.png"/>
      
      <Button Text="Main" TextColor="White" BackgroundColor="#bcc2c8" Command="{Binding GoHomeCommand}" BorderColor="Transparent"/>
      <Button Text="Menu" TextColor="White" BackgroundColor="#bcc2c8" Command="{Binding GoMenuCommand}" BorderColor="Transparent" />
      <Button Text="To Cafe" TextColor="White" BackgroundColor="#bcc2c8" Command="{Binding GoToThereCommand}" BorderColor="Transparent"/>
      <Button Text="Account" TextColor="White" BackgroundColor="#bcc2c8" Command="{Binding GoMemberCommand}" BorderColor="Transparent"/>
    </StackLayout>
  </ContentPage.Content> 
</ContentPage>